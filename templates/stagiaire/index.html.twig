{% extends 'base.html.twig' %} {% block title %}Liste des stagiaires{% endblock %}
{% block body %}
<div class="container-fluid">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th>Nom</th>
        <th>Pr√©nom</th>
        <th>Genre</th>
        <th>Date de naissance</th>
        <th>Ville</th>
        <th>Email</th>
        <th>Telephone</th>
        {% if app.user %}
        <th>Modifier</th>
        <th>Supprimer</th>
        {% endif %}
      </tr>
    </thead>
    <tbody>
      {% for stagiaire in stagiaires %}
      <tr class="table-active">
        <td scope="row">{{stagiaire.id}}</td>
        <td><a href="{{path('show_stagiaire', {id: stagiaire.id})}}">{{stagiaire.nom}}</a></td>
        <td>{{stagiaire.prenom}}</td>
        <td>{{stagiaire.genre}}</td>
        <td>{{stagiaire.dateNaissanceFr}}</td>
        <td>{{stagiaire.ville}}</td>
        <td>{{stagiaire.email}}</td>
        <td>{{stagiaire.telephone}}</td>
        {% if app.user %}
        <td><button type="button" class="btn btn-warning" data-bcup-haslogintext="no"><a href="{{path('edit_stagiaire', {id: stagiaire.id})}}">Modifier</a></button></td>
        <td><button type="button" class="btn btn-danger" data-bcup-haslogintext="no"><a href="{{path('delete_stagiaire', {id: stagiaire.id})}}">Supprimer</a></button></td>
        {% endif %}
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
