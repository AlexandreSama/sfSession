{% extends 'base.html.twig' %} {% block title %}Ajouter une session{% endblock
%} {% block body %} 
{% if edit %}
<h1>Editer une session</h1>
{% else %}
<h1>Ajouter une session</h1>
{% endif %}

{{ form_start(formCreate) }}

{{ form_row(formCreate.nom) }}

{{ form_row(formCreate.formation) }}

<div class="row">
  <div class="col-sm">
    {{ form_row(formCreate.dateDebut) }}
  </div>

  <div class="col-sm">
    {{ form_row(formCreate.dateFin) }}
  </div>
</div>
 
{{ form_row(formCreate.nbPlace) }}

<div class="form-group row">
  <div id="programme-fields-list" class="col-sm-10 remove-collection-widget" data-prototype="{{ form_widget(formCreate.programmes.vars.prototype, {'attr': {'class': 'borders'
  }})|e }}" data-session="{{ sessionId }}" data-widget-tags="{{ '
  <div class=" mt-3"></div>
  '|e }}" data-widget-counter="{{ formCreate.programmes | length }}"> {% for
  programmeField in formCreate.programmes %}

  <div>
    {{ form_errors(programmeField) }}

    {{ form_widget(programmeField, {'attr': {'class': 'borders'}}) }}
  </div>

  {% endfor %}
</div>

<div class="form-group row flex-action">
  <button type="button"
    class="add-another-collection-widget button bg-slate-900 font-bold py-2 px-4 rounded-md hover:bg-indigo-600 transition duration-300 w-full mt-5"
    data-list-selector="#programme-fields-list">
    Ajouter un nouveau module
  </button>
</div> 

{{ form_row(formCreate.valider) }}

{{ form_end(formCreate) }}

{% endblock %}